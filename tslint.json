{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "quotemark": [true, "single", "jsx-double"],
        "ter-indent": [true, 4, {
            "SwitchCase": 1
        }],
        "max-line-length": [true, 200],
        "interface-over-type-literal": false,
        "object-literal-sort-keys": false
    },
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": "./src"
    }
}