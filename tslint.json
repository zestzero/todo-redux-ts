{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "quotemark": [true, "single", "jsx-double"],
        "ter-indent": [true, 4, {
            "SwitchCase": 1
        }],
        "max-line-length": [true, 200],
        "variable-name": [true, "allow-pascal-case"],
        "import-name": [true, {
            "react": "React",
            "reactDom": "ReactDOM"
        }],
    },
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": "./src",
    }
}